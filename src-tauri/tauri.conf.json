{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "mc-server-manager",
    "version": "0.5.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "mc-server-manager.oldisek.eu",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Minecraft Server Manager",
        "width": 900,
        "height": 500,
        "minWidth": 600,
        "minHeight": 300
      }
    ]
  }
}
